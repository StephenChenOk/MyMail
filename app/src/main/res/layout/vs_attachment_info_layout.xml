<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_attachment_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_attachment"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_logo_attachment_info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_attachment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name.jpg"
            android:textColor="#555"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_size_attachment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="100.k" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="附件信息"
        android:textSize="12sp" />

</LinearLayout>
