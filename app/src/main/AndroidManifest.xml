<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chen.fy.mymail">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡读写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.WriteEmailActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name=".activities.AddressBookActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name=".activities.DraftBoxActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name=".activities.SentActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name=".activities.InboxActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name=".activities.AddPersonActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name=".activities.ContactPersonInfoActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name=".activities.DraftItemDetailActivity"
            android:theme="@style/MyTheme"/>

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.chen.fy.mymail.BmobContentProvider">
        </provider>

    </application>
</manifest>